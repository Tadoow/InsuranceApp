<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/main_60</item>
    </style>

    <style name="TextSecondary" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/main_30</item>
    </style>

    <style name="TextFactor" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_100</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/btn_calculate_enabled_colors</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAppearance">@style/TextButton</item>
        <item name="android:textColor">@drawable/btn_calculate_enabled_text_colors</item>
    </style>

    <style name="TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0156</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextInputShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BottomSheetShape</item>
    </style>

    <style name="ThemeOverlay.MyBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/TextInputShape</item>
        <item name="endIconDrawable">@drawable/ic_x</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/blue_100</item>
    </style>

    <style name="TextInputStyleFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/TextInputShape</item>
        <item name="boxBackgroundColor">@color/main_06</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

</resources>
